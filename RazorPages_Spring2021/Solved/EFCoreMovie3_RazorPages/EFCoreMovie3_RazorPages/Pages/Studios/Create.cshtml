@page
@model EFCoreMovie3_RazorPages.Pages.Studios.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h1>Create a studio </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>

            <div class="form-group">
                <label   hidden="hidden"   asp-for="@Model.Studio.Id" class="control-label"></label>
                <input    hidden="hidden"  asp-for="@Model.Studio.Id" class="form-control" />
                <span asp-validation-for="@Model.Studio.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Studio.Name" class="control-label"></label>
                <input asp-for="@Model.Studio.Name" class="form-control" />
                <span asp-validation-for="@Model.Studio.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Studio.NoOfEmployees" class="control-label"></label>
                <input asp-for="@Model.Studio.NoOfEmployees" class="form-control" />
                <span asp-validation-for="@Model.Studio.NoOfEmployees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Studio.Hqcity" class="control-label"></label>
                <input asp-for="@Model.Studio.Hqcity" class="form-control" />
                <span asp-validation-for="@Model.Studio.Hqcity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

