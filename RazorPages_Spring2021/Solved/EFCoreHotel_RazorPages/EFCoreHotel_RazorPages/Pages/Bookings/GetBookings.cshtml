@page
@model EFCoreHotel_RazorPages.GetBookingsModel
@{
    ViewData["Title"] = "GetBookings";
}

<h4 style="color:red"> List of bookings</h4>
<form>
    <p>
        Filter<br />
        <input type="date" asp-for="Date" />
        <input type="submit" value="Filter" />
         <a asp-page="/Bookings/GetBookings">Back to Full List </a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th> Booking Id </th>
            <th> From  </th>
            <th> To </th>
            <th> Hotel No </th>
            <th> Room No </th>
            <th> Guest No </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Bookings != null)
        {
            @if (Model.Count != 0)
            {
                <p>The number of booking  is :@Model.Count;</p>
            }
            @foreach (var item in Model.Bookings)
            {
        <tr>
            <td>@item.BookingId </td>
            <td> @item.DateFrom </td>
            <td> @item.DateTo </td>
            <td> @item.HotelNo  </td>
            <td> @item.RoomNo</td>
            <td> @item.GuestNo </td>
        </tr>
            }
        }
</table>



